<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardInfoSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:drawablePadding">@dimen/margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.DefaultCornerRadius">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.smallRadius">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="itemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>